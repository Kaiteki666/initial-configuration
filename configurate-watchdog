#!/bin/bash

# Визначаємо шлях до файлу
FILE="/etc/systemd/system.conf"

# Використовуємо sed для заміни закоментованої строки
sed -i '/^#RuntimeWatchdogSec=.*/d' "$FILE"  # Видаляємо закоментовану строку, якщо вона існує
echo "RuntimeWatchdogSec=16" >> "$FILE"  # Додаємо нову строку

# Виводимо повідомлення про успішне виконання
echo "Зміни внесені успішно!"
