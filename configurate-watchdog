#!/bin/bash

# Визначаємо шлях до файлу
FILE="/etc/systemd/system.conf"

# Використовуємо sed з sudo для заміни закоментованої строки
sudo sed -i '/^#RuntimeWatchdogSec=.*/d' "$FILE"  # Видаляємо закоментовану строку, якщо вона існує
echo "RuntimeWatchdogSec=16" | sudo tee -a "$FILE" > /dev/null  # Додаємо нову строку

# Виводимо повідомлення про успішне виконання
echo "Зміни внесені успішно!"
